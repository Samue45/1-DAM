Algoritmo ValorAbsoluto
	
	//Bloque de datos
	Definir number Como Entero
	
	
	//Datos del usuario
	Escribir "Introducza el número para calcular su valor absoluto"
	Leer number
	
	
	//Intrucciones del código
	Si number >=0  Entonces
		Escribir  "El resutaldo es = " number
	SiNo
		number = -(number)
		Escribir  "El resutaldo es = " number
	FinSi
	

FinAlgoritmo
